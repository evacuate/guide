<style>
  .pagefind-ui__search-input {
    margin-bottom: var(--base-size-16) !important;
    border-radius: var(--base-size-6);
    height: var(--base-size-24);
    width: calc(100% - 2 * var(--base-size-16));
    background-color: transparent;
    border: 1px solid var(--borderColor-muted);
    padding: var(--base-size-8) var(--base-size-16);
    font-size: var(--base-size-16);
  }

  .pagefind-ui__search-clear {
    display: none;
  }
</style>

<blockquote><p><strong>Note:</strong> This search feature is automatically generated to provide the latest list of all pages on the site. If it does not function correctly, please use a search engine like Google.</p></blockquote>

<section data-pagefind-ignore>
  <script src="/pagefind/pagefind-ui.js" type="text/javascript"></script>
  <div id="search" class="search"></div>
  <script>
    window.addEventListener('DOMContentLoaded', event => {
      new PagefindUI({
        element: '#search',
        showImages: false,
        translations: {
          placeholder: 'Search this website',
          zero_results: "We couldn't find any search results for '[SEARCH_TERM]'"
        }
      });
    });
  </script>
</section>
